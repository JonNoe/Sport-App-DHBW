<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:layout_marginTop="?attr/actionBarSize"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/consecutiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Du hast dich schon 0 Tage in Folge eingeloggt, mach weiter so!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="75sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/medal"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_marginBottom="16sp"
            android:src="@drawable/medal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mach direkt mit dem Training weiter"
            android:textSize="18sp"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="10sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/startTraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_DHBW_app"
            android:text="Start"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingLeft="24sp"
            android:paddingRight="24sp"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"/>
    </LinearLayout>

</FrameLayout>
