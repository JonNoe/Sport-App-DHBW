<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TrainingFragment_3">


    <TextView
        android:id="@+id/TitleT1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fortgeschrittenes Oberkörper-Workout"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_T1"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/Dauer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geschätze Dauer: 15min"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/TitleT1"
        android:layout_marginTop="5sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/recycler_view_T1"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Dauer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <Button
        android:id="@+id/StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red_DHBW_app"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Start"
        android:textColor="@android:color/white"
        android:textColorLink="@color/red_DHBW_app"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>